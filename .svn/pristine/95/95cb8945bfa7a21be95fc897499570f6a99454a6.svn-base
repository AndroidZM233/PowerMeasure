<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/left_top"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#C9E5E8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:visibility="gone"
            android:id="@+id/num1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/main_insp"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <ImageView
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/num2"
            android:src="@drawable/main_sp"
            android:layout_width="120dp"
            android:layout_height="120dp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:visibility="gone"
            android:id="@+id/num3"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/main_3"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <ImageView
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/num4"
            android:src="@drawable/main_4"
            android:layout_width="120dp"
            android:layout_height="120dp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:visibility="gone"
            android:id="@+id/num5"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/main_5"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/num6"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/main_6"
            android:layout_width="120dp"
            android:layout_height="120dp" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">
        <ImageView
            android:id="@+id/num7"
            android:src="@drawable/main_7"
            android:layout_width="270dp"
            android:layout_height="100dp" />

    </LinearLayout>
</LinearLayout>