<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="speedata.com.powermeasure.activity.SpecialSecondAct">
    <common.view.CustomTitlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.4"
            android:text="报警时间："
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:text="2016"
            android:id="@+id/tv_alSecond_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.4"
            android:text="报警原因："
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="azuo"
            android:layout_weight="1"
            android:id="@+id/tv_alSecond_reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.4"
            android:text="处理方法："
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="azuo"
            android:layout_weight="1"
            android:id="@+id/tv_alSecond_method"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.4"
            android:text="实际原因："
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:visibility="gone"
                    android:id="@+id/cb_alSecond_cause1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="机械动作是否正常" />

                <CheckBox
                    android:visibility="gone"
                    android:id="@+id/cb_alSecond_cause2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作节拍是否正常" />

                <CheckBox
                    android:visibility="gone"
                    android:id="@+id/cb_alSecond_cause3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否有异常响声" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.4"
            android:text="实际处理："
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="90dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:visibility="gone"
                    android:id="@+id/cb_alSecond_deal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="机械动作是否正常" />

                <CheckBox
                    android:visibility="gone"
                    android:id="@+id/cb_alSecond_deal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作节拍是否正常" />

                <CheckBox
                    android:visibility="gone"
                    android:id="@+id/cb_alSecond_deal3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否有异常响声" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.4"
            android:text="备注："
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_weight="1"
            android:id="@+id/et_alSecond_beizhu"
            style="@style/main_button"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:text="反馈"
            android:id="@+id/btn_alSecond_fankui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:text="维修申请"
            android:layout_marginLeft="20dp"
            android:id="@+id/btn_alSecond_weixiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
