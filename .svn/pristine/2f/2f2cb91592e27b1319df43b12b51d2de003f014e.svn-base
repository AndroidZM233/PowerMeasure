<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="speedata.com.powermeasure.activity.TroubleSecondAct">
    <common.view.CustomTitlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.4"
            android:text="故障时间："
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:text="2016"
            android:id="@+id/tv_troubleS_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.4"
            android:text="故障设备："
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="azuo"
            android:layout_weight="1"
            android:id="@+id/tv_troubleS_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.4"
            android:text="疑难描述："
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="azuo"
            android:layout_weight="1"
            android:id="@+id/tv_troubleS_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.4"
            android:text="解决方案："
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <EditText
            android:singleLine="true"
            android:layout_weight="1"
            android:id="@+id/et_troubleS_method"
            style="@style/main_button"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.4"
            android:text="处理情况："
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <EditText
            android:singleLine="true"
            android:layout_weight="1"
            android:id="@+id/et_troubleS_handling"
            style="@style/main_button"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/bg_alibuybutton"
            android:layout_weight="1"
            android:text="检修提交"
            android:id="@+id/btn_althird_fankui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:background="@drawable/bg_alibuybutton"
            android:layout_weight="1"
            android:text="延期申请"
            android:layout_marginLeft="20dp"
            android:id="@+id/btn_althird_postpone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:background="@drawable/bg_alibuybutton"
            android:layout_weight="1"
            android:text="转为疑难故障"
            android:layout_marginLeft="20dp"
            android:id="@+id/btn_althird_toTrouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
