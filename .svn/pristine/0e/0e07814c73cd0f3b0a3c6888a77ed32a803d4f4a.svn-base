<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_insp_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更换设备：" />

        <TextView
            android:id="@+id/tv_er_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="007" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_insp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_insp_number"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请时间：" />

        <TextView
            android:id="@+id/tv_er_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="007" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_insp_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_insp_name"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注意事项：" />

        <TextView
            android:id="@+id/tv_er_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="007" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/next44" />
</RelativeLayout>