<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:textSize="22sp"
        android:text="维修申请"
        android:textColor="@color/white"
        android:background="#FF9945"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="工单编号  "
            android:textColor="#808080" />

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/shuxian">

        </View>

        <TextView
            android:id="@+id/dialog_al_equip_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="2016"
            android:textColor="#333333" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/view_bg">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="设备名称  "
            android:textColor="#808080" />

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/shuxian">

        </View>

        <TextView
            android:id="@+id/dialog_al_order_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="2016"
            android:textColor="#333333" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/view_bg">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="开始时间  "
            android:textColor="#808080" />

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/shuxian">

        </View>

        <TextView
            android:id="@+id/dialog_al_startTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:hint="设置年月日"
            android:textColor="#333333" />
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/shuxian">

        </View>

        <TextView
            android:id="@+id/dialog_al_startTime_hms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:hint="设置时分秒"
            android:textColor="#333333" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/view_bg">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="结束时间  "
            android:textColor="#808080" />

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/shuxian">

        </View>
        <TextView
            android:id="@+id/dialog_al_endTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:hint="设置年月日"
            android:textColor="#333333" />

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/shuxian">

        </View>
        <TextView
            android:id="@+id/dialog_al_endTime_hms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:hint="设置时分秒"
            android:textColor="#333333" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/view_bg">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="维修原因  "
            android:textColor="#808080" />

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/shuxian">

        </View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <RadioGroup
                android:layout_marginLeft="5dp"
                android:id="@+id/dialog_al_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb1"
                    android:text="故障维修"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <RadioButton
                    android:id="@+id/rb2"
                    android:text="优化消缺"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/view_bg">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="维修方案  "
            android:textColor="#808080" />

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/shuxian">

        </View>

        <EditText
            android:layout_weight="1"
            android:id="@+id/dialog_al_et"
            style="@style/main_button"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        >

        <Button
            android:id="@+id/btn_wxsq_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/sure" />

        <Button
            android:id="@+id/btn_wxsq_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/cancel" />
    </LinearLayout>
</LinearLayout>