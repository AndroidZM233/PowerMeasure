<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C9E5E8"
    tools:context="speedata.com.powermeasure.activity.InspectAct">
    <common.view.CustomTitlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--<speedata.com.powermeasure.HorizScroll.HorizontalScrollMenu-->
        <!--android:id="@+id/hsm_container"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

    <!--</speedata.com.powermeasure.HorizScroll.HorizontalScrollMenu>-->
    <HorizontalScrollView
        android:background="#CDCDCD"
        android:id="@+id/hsv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none" >
    <LinearLayout
        android:background="#CDCDCD"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll1"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btn_1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quanbu"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/tv1"
                android:textSize="18sp"
                android:text="全部"
                android:textColor="#FF6600"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <View
                android:layout_marginLeft="10dp"
                android:background="@drawable/shuxian"
                android:layout_width="1dp"
                android:layout_height="25dp">

            </View>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btn_2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/danyuan"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/tv2"
                android:textSize="18sp"
                android:text="1号线"
                android:textColor="#336699"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <View
                android:layout_marginLeft="10dp"
                android:background="@drawable/shuxian"
                android:layout_width="1dp"
                android:layout_height="25dp">

            </View>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll3"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btn_3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/danyuan"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/tv3"
                android:textSize="18sp"
                android:text="2号线"
                android:textColor="#336699"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <View
                android:layout_marginLeft="10dp"
                android:background="@drawable/shuxian"
                android:layout_width="1dp"
                android:layout_height="25dp">

            </View>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll4"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btn_4"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/danyuan"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/tv4"
                android:textSize="18sp"
                android:text="3号线"
                android:textColor="#336699"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <View
                android:layout_marginLeft="10dp"
                android:background="@drawable/shuxian"
                android:layout_width="1dp"
                android:layout_height="25dp">

            </View>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll5"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/btn_5"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/danyuan"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/tv5"
                android:textSize="18sp"
                android:text="4号线"
                android:textColor="#336699"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <View
                android:layout_marginLeft="10dp"
                android:background="@drawable/shuxian"
                android:layout_width="1dp"
                android:layout_height="25dp">

            </View>
        </LinearLayout>
    </LinearLayout>

    </HorizontalScrollView>

    <View
        android:background="@drawable/shuxian"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>
    <ListView
        android:id="@+id/lv_insp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ListView>
</LinearLayout>
