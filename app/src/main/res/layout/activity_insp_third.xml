<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C5C5C5"
    tools:context="speedata.com.powermeasure.activity.InspThirdAct">
    <common.view.CustomTitlebar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/sp_insp_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <LinearLayout
        android:background="#ffffff"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_inspThird_photo"
            style="@style/main_button"
            android:layout_width="300dp"
            android:layout_height="120dp"
            />
        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btn_inspThird_takephoto"
            android:layout_marginLeft="10dp"
            android:background="@drawable/takephoto"
            android:layout_width="60dp"
            android:layout_height="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:background="@drawable/al_red"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="故障描述："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:id="@+id/et_inspThird_trouble"
            style="@style/main_button"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
        <Button
            android:layout_marginLeft="70dp"
            android:id="@+id/btn_inspThird_trouble"
            android:layout_marginTop="10dp"
            android:background="@drawable/photo_guzhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
